  "compilerOptions": {
      "target": "es6",                             
      "module": "commonjs",                        
      "strict": true,                              
      "esModuleInterop": true,                     
      "skipLibCheck": true,                        
      "forceConsistentCasingInFileNames": true,    
      "outDir": "./dist",                          
      "sourceMap": true                            
  },
  "include": ["source/js/*"], 
  "exclude": ["node_modules"]
}